<UserControl x:Class="Barista1.UserControls.Base.TextBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Barista1.UserControls.Base"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
	<Grid   Background="{DynamicResource Light}">
		<ScrollViewer>
			<StackPanel x:Name="WindowContent" Margin="0 20 0 0">
			<Button Uid="0" Style="{DynamicResource TopicButton}" Content="Возделывание кофейного дерева" Click="btnContent"></Button>
			<Button Uid="1" Style="{DynamicResource TopicButton}" Content="Калибровка и сортировка зеленого кофе" Click="btnContent"></Button>
			<Button Uid="2" Style="{DynamicResource TopicButton}"  Content="Общий вид традиционной эспрессо-машины" Click="btnContent"></Button>
			<Button Uid="3" Style="{DynamicResource TopicButton}" Content="Правила приготовления кофе по-восточному" Click="btnContent"></Button>
		</StackPanel>
			</ScrollViewer>
	</Grid>
</UserControl>
