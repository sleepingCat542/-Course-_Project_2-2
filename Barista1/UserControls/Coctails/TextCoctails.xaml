<UserControl x:Class="Barista1.UserControls.Coctails.TextCoctails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Barista1.UserControls.Coctails"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="Window_Loaded">
	<Grid  Background="{DynamicResource Light}">
		<ScrollViewer>
			<StackPanel x:Name="WindowContent"   Margin="0 20 0 0">
				<Button Uid="0" Style="{DynamicResource TopicButton}" Content="Раф" Click="btnContent"></Button>
			<Button Uid="1" Style="{DynamicResource TopicButton}" Content="Кофе по-царски" Click="btnContent"></Button>
			<Button Uid="2" Style="{DynamicResource TopicButton}"  Content="Бейлиз" Click="btnContent"></Button>
			<Button Uid="3" Style="{DynamicResource TopicButton}" Content="Ирландский кофе" Click="btnContent"></Button>
				<Button Uid="4" Style="{DynamicResource TopicButton}" Content="Б-52" Click="btnContent"></Button>
			</StackPanel>
			</ScrollViewer>
	</Grid>
</UserControl>
